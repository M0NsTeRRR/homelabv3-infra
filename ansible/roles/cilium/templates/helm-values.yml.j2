---
kubeProxyReplacement: true
routingMode: native
tunnel: disabled
autoDirectNodeRoutes: true
ipv4NativeRoutingCIDR: "{{ cilium_cluster_cidr_ipv4 }}"
ipv6NativeRoutingCIDR: "{{ cilium_cluster_cidr_ipv6 }}"
enableIPv4Masquerade: true
enableIPv6Masquerade: true
loadBalancer:
  mode: dsr
  acceleration: native
k8sServiceHost: "{{ (cilium_service_hosts[0] | split('/'))[0] }}"
k8sServicePort: 6443
policyEnforcementMode: default
policyAuditMode: false
hostFirewall:
  enabled: true
extraConfig:
  allow-localhost: policy
ipv4:
  enabled: true
ipv6:
  enabled: true
ipam:
  mode: cluster-pool
  operator:
    clusterPoolIPv4PodCIDRList: "{{ cilium_cluster_cidr_ipv4 }}"
    clusterPoolIPv6PodCIDRList: "{{ cilium_cluster_cidr_ipv6 }}"
    clusterPoolIPv4MaskSize: "{{ cilium_cluster_pool_ipv4_mask }}"
    clusterPoolIPv6MaskSize: "{{ cilium_cluster_pool_ipv6_mask }}"
prometheus:
  enabled: true
  serviceMonitor:
    enabled: true
dashboards:
  enable: true
operator:
  prometheus:
    enabled: true
    serviceMonitor:
      enabled: true
hubble:
  relay:
    enabled: true
  ui:
    enabled: true
  metrics:
    enabled:
      - dns
      - drop
      - tcp
      - flow
      - port-distribution
      - icmp
      - http
    enableOpenMetrics: true
    serviceMonitor:
      enabled: true
    dashboards:
      enabled: true
envoy:
  enabled: true
  prometheus:
    enabled: true
    serviceMonitor:
      enabled: true
