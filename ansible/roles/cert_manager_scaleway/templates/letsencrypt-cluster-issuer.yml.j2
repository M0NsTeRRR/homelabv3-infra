---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt
  namespace: cert-manager-scaleway
spec:
  acme:
    email: "{{ cert_manager_scaleway_email }}"
    server: https://acme-v02.api.letsencrypt.org/directory
    privateKeySecretRef:
      name: letsencrypt
    solvers:
      - dns01:
          cnameStrategy: None
          webhook:
            groupName: acme.scaleway.com
            solverName: scaleway
