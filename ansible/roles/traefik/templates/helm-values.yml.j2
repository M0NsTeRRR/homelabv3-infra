image:
  tag: "{{ traefik_version }}"
deployment:
  replicas: 3
  annotations:
    reloader.stakater.com/auto: "true"
ports:
  web:
    redirectTo:
      port: websecure
    middlewares:
      - {{ traefik_namespace }}-security@kubernetescrd
  websecure:
    middlewares:
      - {{ traefik_namespace }}-security@kubernetescrd
service:
  annotations:
    metallb.universe.tf/loadBalancerIPs: {{ traefik_external_ips | join(",") }}
  ipFamilyPolicy: PreferDualStack
providers:
  kubernetesIngress:
    publishedService:
      enabled: true
ingressClass:
  enabled: true
  isDefaultClass: {{ traefik_default_ingress_class }}
  name: {{ traefik_namespace }}
additionalArguments:
  - "--providers.kubernetescrd.allowCrossNamespace=true"
  - "--providers.kubernetesingress.ingressclass={{ traefik_namespace }}"
tlsOptions:
  default:
    minVersion: VersionTLS12
    cipherSuites:
      - TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305_SHA256
      - TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256
      - TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384
      - TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305_SHA256
    sniStrict: true
metrics:
  prometheus:
    serviceMonitor:
      enabled: true
