#jinja2: lstrip_blocks: "True"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: external-dns
  namespace: {{ external_dns_namespace }}
  annotations:
    reloader.stakater.com/auto: "true"
spec:
  replicas: {{ external_dns_replicas }}
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: external-dns
  template:
    metadata:
      labels:
        app: external-dns
    spec:
      serviceAccountName: external-dns
      containers:
        - name: external-dns
          image: registry.k8s.io/external-dns/external-dns:{{ external_dns_version }}
          volumeMounts:
            {% if external_dns_ca | length %}
            - name: "{{ external_dns_ca }}"
              mountPath: /etc/external-dns/ssl
              readOnly: true
            {% endif %}
          env:
          {% for key, value in external_dns_envs.items() %}
            - name: {{ key }}
              value: {{ value }}
          {% endfor %}
          {% if external_dns_ca | length %}
            - name: EXTERNAL_DNS_PDNS_TLS_ENABLED
              value: "true"
            - name: EXTERNAL_DNS_TLS_CA
              value: /etc/external-dns/ssl/ca.crt
          {% endif %}
          envFrom:
            - secretRef:
                name: vault
      volumes:
        - name: vault
          secret:
            secretName: vault
        {% if external_dns_ca | length %}
        - name: "{{ external_dns_ca }}"
          configMap:
            name: "{{ external_dns_ca }}"
        {% endif %}
