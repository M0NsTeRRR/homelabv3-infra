setgid=pdns
setuid=pdns
query-local-address=0.0.0.0, ::
local-address=127.0.0.1, ::1
local-port=5301
allow-from=0.0.0.0/0, ::/0
forward-zones={{ powerdns_recursor_forward_zone }}{% if powerdns_recursor_domains | length > 0 %},{% endif %}{{ powerdns_recursor_forward_reverse_zone }}
serve-rfc1918=no
webserver=yes
webserver-address=127.0.0.1
webserver-password={{ powerdns_recursor_webserver_password }}
webserver-port=8082
webserver-allow-from=127.0.0.1
version-string=anonymous
proxy-protocol-from=127.0.0.1/8,::1/128
max-negative-ttl=60
lua-config-file=/etc/powerdns/recursor-rpz.lua