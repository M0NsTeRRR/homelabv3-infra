#jinja2: lstrip_blocks: "True"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: external-dns
  namespace: {{ external_dns_namespace }}
spec:
  replicas: {{ external_dns_replicas }}
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: external-dns
  template:
    metadata:
      labels:
        app: external-dns
      annotations:
        vault.hashicorp.com/agent-inject: 'true'
        vault.hashicorp.com/role: '{{ external_dns_vault_role }}'
        vault.hashicorp.com/agent-inject-secret-config: '{{ external_dns_vault_inject_secret }}'
        vault.hashicorp.com/agent-inject-template-config: |
         {{ '{{- with secret "' + external_dns_vault_inject_secret + '" -}}' }}
         {% for external_dns_env in external_dns_envs %}
         {% if external_dns_env == "EXTERNAL_DNS_TLS_CA" %}
         {{ ("export EXTERNAL_DNS_TLS_CA=\"/etc/external-dns/ssl/ca.crt") | indent(2, true) }}"
         {% else %}
         {{ ("export " + external_dns_env + "=\"{{ .Data.data." + external_dns_env + " }}") | indent(2, true) }}"
         {% endif %}
         {% endfor %}
         {{ "{{- end }}" }}
    spec:
      serviceAccountName: external-dns
      initContainers:
        - name: copy-shell
          image: busybox:uclibc
          command: ["cp", "/bin/sh", "/shell/sh"]
          volumeMounts:
            - name: shell
              mountPath: /shell
      containers:
        - name: external-dns
          image: registry.k8s.io/external-dns/external-dns:{{ external_dns_version }}
          command:
            - /shell/sh
            - -c
          args:
            - source /vault/secrets/config && /ko-app/external-dns {{ external_dns_args }}
          volumeMounts:
            - name: shell
              mountPath: /shell
            {% if "EXTERNAL_DNS_TLS_CA" in external_dns_envs %}
            - name: "{{ external_dns_ca }}"
              mountPath: /etc/external-dns/ssl
              readOnly: true
            {% endif %}
      volumes:
        - name: shell
          emptyDir: {}
        {% if "EXTERNAL_DNS_TLS_CA" in external_dns_envs %}
        - name: "{{ external_dns_ca }}"
          configMap:
            name: "{{ external_dns_ca }}"
        {% endif %}
